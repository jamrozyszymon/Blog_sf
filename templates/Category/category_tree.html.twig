{% block nav %}       

<form method="GET" role="search" action="{{path('category_search_display')}}">
    <div class="input-group rounded mb-5">
        <input type="text" class="form-control" name="searchby" placeholder="Znajdź kategorię..." aria-label="Znajdź kategorię">

        <button class="btn btn-outline-secondary" type="submit" id="button-addon2">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
            </svg>
        </button>
    </div>
</form>

    <h2>Kategorie</h2>
        <div class="list-group">
            {% for category in categories %}

                <a class="list-group-item list-group-item-action" href={{path('post_display', {'categoryname':category.name|lower|slug, 'id':category.id})}}>{{category.name}}</a>

            {% endfor %}
        </div>
{% endblock %}