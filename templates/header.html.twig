{% block header %}
    <div class="header_title">
        <h1><a href={{path('dashboard')}} class="main_title">Forum</a></h1>
    </div>

    <div class= "header_nav">
        <ul class="nav justify-content-end">
            {% if app.user %}
                <li class="nav-item">
                    <a class="nav-link" href={{path('category_display')}}>Kategorie</a>
                </li>
                 {% if is_granted('ROLE_ADMIN') %}
                <li class="nav-item">
                    <a class="nav-link" href={{path('admin_dashboard')}}>Admin Panel</a>
                </li>
                {% else %}
                <li class="nav-item">
                    <a class="nav-link" href={{path('dashboard')}}>Moje konto</a>
                </li>
                {% endif %}
                
                <li class="nav-item">
                    <a class="nav-link" href={{path('logout')}}>Wyloguj</a>
                </li>
            {% else %}
                <li class="nav-item">
                    <a class="nav-link" href={{path('login')}}>Zaloguj się</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href={{path('register')}}>Zarejestruj się</a>
                </li>
            {% endif %}
        </ul>
    </div>
{% endblock %}