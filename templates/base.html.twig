<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>
            {% block title %}Forum{% endblock %}
        </title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    
    <body>
        <header>
            {% block header %}
                {% include 'header.html.twig' %}
            {% endblock %}
        </header>

        <main>
            <div class="container mt-5">
                <div class="row">
                    <nav class="col-sm-12 col-md-3 col-lg-2 mb-5">
                            {% block nav %}
                                    {{ render(controller("App\\Core\\Controller\\CategoryController::displayCategories")) }}
                            {% endblock %}
                    </nav>

                    <article class="col-sm-12 col-md-9 col-lg-8 mb-5">
                        {% block body %}


                        {% endblock %}
                    </article>

                    <aside class="col-sm-12 col-md-12 col-lg-2 mb-5">
                        {% block aside %}
                            {% include 'aside.html.twig' %}
                        {% endblock %}
                    </aside>
                </div>
            </div>
        </main>

        <footer>
            {% include 'footer.html.twig' %}
        </footer>

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
